---
import "@fontsource/Urbanist";
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<header class="w-full fixed bg-transparent flex justify-between py-4 px-8 z-10">

			<div class="container mx-auto flex justify-between items-center">
				<h1 class="font-sans animate-text bg-gradient-to-r from-teal-500 via-purple-500 to-orange-500 bg-clip-text text-transparent text-3xl"><a href="/">SS.</a></h1>
				<button class="h-[21px] flex flex-col justify-between group">
					<div class="w-[30px] bg-white h-[3px] transition ease-in-out duration-200 group-hover:translate-x-1"></div>
					<div class="w-[30px] bg-white h-[3px] transition ease-in-out duration-200 group-hover:-translate-x-1"></div>
					<div class="w-[30px] bg-white h-[3px] transition ease-in-out duration-200 group-hover:translate-x-1"></div>
				</button>
			</div>

		</header>
		<slot />
		<div class="w-full bg-pink-600 font-sans text-gray-200 px-6">
			<div class="container mx-auto flex flex-row justify-center md:justify-end items-center min-h-[80px]">
				<p>All rights reserved swaleysmart.com &copy; 2024</p>
			</div>
		</div>
	</body>
</html>
<style is:global>

</style>
